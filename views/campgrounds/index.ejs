<%- include("../partials/header.ejs") -%>

<main role="main" class="flex-shrink-0">
	<div class="container">
		<header class="jumbotron">
			<div class="container">
				<h1 style="">Welcome To University Campgrounds</h1>
				<p>View our hand-picked campgrounds from all over the world!</p>
				<p>
					<a href="/campgrounds/new" class="btn btn-primary btn-large">Add New Campground</a>
				</p>
			</div>
		</header>

		<div class="row text-center" id="campground-grid">
			<% campgrounds.forEach(function(campground){ %>
				<div class="col-md-4 col-sm-6 mb-4">
					<div class="card mb-4 shadow-sm">
						<img class="bd-placeholder-img card-img-top" width="100%" height="225" src="<%= campground.image %>" alt="<%= campground.name %>">
						<div class="card-body">
							<h5 class="card-title" style="text-align: left"><%= campground.name %></h5>
							<div class="d-flex justify-content-between align-items-center">
								<!-- START: Campground Buttons -->
								<div class="btn-group">
									<!-- START: Like Button -->
										<a href="/campgrounds/<%= campground._id %>" class="btn btn-xs btn-primary">More Info</a>
									<!-- END: View Button -->

								</div>
								<!-- END: Campground Buttons -->
								<!-- START: Campground Author -->
								<small class="text-muted"><%= campground.author.username %></small>
								<!-- END: Campground Author -->
							</div>
						</div>
					</div>
				</div>
			<% }); %>
		</div>
		</div>
</main>

<%- include("../partials/footer.ejs") -%>
